---
import { Image } from "astro:assets";
import { SOCIAL_LINKS } from "@/navigation";
import type { HTMLAttributes } from "astro/types";
import CardInfo from "./card-info.astro";

import bitMojiSurprised from "@/assets/bitmoji/surprised-phone.webp";
import { cn } from "@/lib/utils";
import { LineMdTwitterX } from "./icons";

interface Props extends HTMLAttributes<"div"> {
  className?: string;
}

const { className } = Astro.props;
---

<CardInfo
  className={cn("col-span-1 md:row-span-2 md:h-full", className)}
  link={SOCIAL_LINKS[2].href}
  target="_blank"
  title="Perfil de X"
  icon
>
  <LineMdTwitterX
    className="mr-2 hover:text-primary duration-300 transition-colors"
    slot="icon"
  />
  <section
    class="h-full w-full flex flex-col items-center gap-4 justify-between"
  >
    <Image
      src={bitMojiSurprised}
      class="aspect-auto max-h-[70%] w-auto object-contain"
      alt="Bitmoji of Ivan Bongiovanni with a phone"
    />

    <p class="text-muted-foreground leading-loose text-sm">
      Si quieres ver mis tweets, puedes seguirme en X.
    </p>
  </section>
</CardInfo>
